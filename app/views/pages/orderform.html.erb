<%= render 'shared/navbar_general' %>
<div class="order-form-image" style="background-image: linear-gradient(
  rgba(0, 0, 0, 0.75),
  rgba(0, 0, 0, 0.75)), url('http://res.cloudinary.com/depgwjsnd/image/upload/v1493209533/HakunaFoods_landing_image_jgnjha.jpg');">
  <div class="order-form order-form-height">
    <div class="back-link">
      <p><i class="fa fa-arrow-left">&nbsp; </i>
        <%= link_to "  Back to homepage", root_path %></p>
      </div>
      <div class="text-center order-form-title">
        <h2>Order now</h2>
        <h4>Please enter your email and postcode and we'll check to see if we deliver to your area!</h4>
      </div>
      <span style="color: #DE605F;"><%= @error if @error %></span>
      <%= simple_form_for @customer do |f| %>
        <%= f.error_notification %>
        <%= f.input :email, required: true %>
        <%= f.input :postcode, required: true, label: 'Enter the first part of your postcode' %>
        <%= f.button :submit, 'Search postcode', class: 'view-plan-btn' %>
      <% end %>
  </div>
</div>


