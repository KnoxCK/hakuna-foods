<%= render 'shared/navbar_general' %>
<div class="order-form-image" style="background-image: linear-gradient(
  rgba(0, 0, 0, 0.75),
  rgba(0, 0, 0, 0.75)), url('http://res.cloudinary.com/depgwjsnd/image/upload/v1493209533/HakunaFoods_landing_image_jgnjha.jpg');">
  <div class="order-form">
    <div class="back-link">
      <p><i class="fa fa-arrow-left">&nbsp; </i>
        <%= link_to "  Back to homepage", root_path %></p>
    </div>
    <div class="text-center order-form-title">
      <h2>Extras</h2>
      <h4>Please select any extras below</h4>
    </div>
    <div class="form">
      <%= form_tag customer_customer_plan_extra_item_path(@customer.id), method: :patch %>
      <table>
        <thead>
          <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Quantity per week</th>
          </tr>
        </thead>
        <tbody>
        <% @extras.each do |extra| %>
          <tr>
            <td><h5><%= extra.name %></h4></td>
            <td><p><%= extra.unit_price.to_f %></p></td>
            <td><%= number_field_tag "#{extra.name}", nil, min: 0 %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= submit_tag 'Submit', class: "btn-default btn-extras" %>
    </div>
  </div>
</div>
